/* Copy & Lists */
p, .body
	margin-top .5rem
	margin-bottom 0
	text-align justify

hlevels = 1 2 3 4 5 6

/* Headings */

/* Initial styles */
for l in hlevels
	h{l}, .txt-h{l}
		font-weight bold
		// font-family Philippa
		// margin-top 1.5rem
		// margin-bottom .5em
		// line-height 1.2

.txt-super
	font-size 4rem
	line-height 72px

.txt-large
	font-size 3.5rem
	line-height 64px

h1, .txt-h1
	font-size 3rem
	line-height 56px

h2, .txt-h2
	font-size 2.5rem
	line-height 44px

h3, .txt-h3
	font-size 2rem
	line-height 36px

h4, .txt-h4
	font-size 1.5rem
	line-height 28px

h5, .txt-h5
	font-size 1.25rem
	line-height 24px

h6, .txt-h6
	font-size 1rem
	line-height 20px
	
body
	font-size 1rem
	line-height 24px

.large
	font-size 1.125rem
	line-height 36px
.small
	font-size .875rem
	line-height 22px
.xs
	font-size .75rem
	line-height 18px


/* Leading paragraph text */
.lead
	font-size 1.414rem
	line-height 1.2em

/* Hug the block above you */
.hug
	margin-top 0

/* Lists */
ul, ol
	margin-top 1.5rem
	margin-bottom 1.5rem

ul li, ol li
	line-height 1.5rem

ul ul, ol ul, ul ol, ol ol
	margin-top 0
	margin-bottom 0

dd, dl, ol, pre, ul
	margin-bottom 1.64706em

dd
	margin-left 0
dt
	font-weight 600

/* Blockquote */
blockquote 
	line-height 1.5rem
	margin-top 1.5rem
	margin-bottom 1.5rem

