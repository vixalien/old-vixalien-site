/* Hover Box stuff */
.popup 
	ul.menu
		display none
		position absolute
		width auto
		/* i know this error */
		background-color unset
		padding 1em 0
		min-width 20em
		list-style-type none
		top 1em
		right 0
		width max-content
		text-align initial
		text-transform initial
		font-weight initial
		font-size small
		box-shadow 0 0 9px 1px rgba(0,0,0,0.5)
		border-radius .5em
		background-color #0a1826
		color rgba(255,255,255,0.702)
		margin 1em
		hr
			margin .5em 0
			border-bottom-color #727272
		li 
			& *, &.txt-gray, &.button
				border 0
				padding 0 3em
				width 100%
				display flex
			&.button a, &.button button
				padding .5em 0
			& span, &.button
				color white
				display flex
				position relative
				&:hover
					border 0
					background-color #456fff
					color white
		& input[type="radio"]
			margin-top auto
			margin-bottom auto
			margin-left 0
			position absolute
			left 0
			right 0
			top 0
			bottom 0
			-webkit-appearance none
			border 0
			background-color transparent
			border-radius 0
			width 100%
			height 100%
			background-position 1em center
			background-size auto 0.5em
			&:checked
				background-size auto 1.25em
				background-image url("data:image/svg+xml;base64,")
				background-repeat no-repeat
				background-position 1em center

@keyframes moveup
	from
		opacity 0
		transform translateY(100vh)
	to
		opacity 1
		transform translateY(0)

/* responsive an action sheet; */
@media screen and (max-width 600px)
	.popup ul.menu
		transition .3ms
		position fixed
		top 0
		bottom 0
		left 0
		right 0
		margin 0
		border-radius 0
		width auto
		font-size 1.1em
		animation moveup .3s ease
		z-index 10
		box-shadow 0 0 0 100vh rgba(0,0,0,0.8)
		overflow-y scroll
		/* Override popper */
		transform none !important
		right 0 !important
		bottom 0 !important
		li span, li.txt-gray
			padding .375em 3em
