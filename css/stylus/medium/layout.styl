// page
html, body
	height 100%
	width 100%
// layout
.container
	& *
		max-width 800px
		margin 0 auto
	&.small *
		max-width 600px
.flex
	display flex
	& *
		height auto
		margin auto 0
	& .tab
		flex 1
	&.vertical
		flex-direction column
		& *
			margin 0
			text-align left
	@media all and (max-width: 800px)
		&.responsive
			flex-direction column